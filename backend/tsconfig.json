{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["DOM", "ES2016"],
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src//*.ts", "./tests//*.ts"],
  "exclude": ["node_modules"]
}